                    <Button x:Name="btnPatch" Content="Patch" HorizontalAlignment="Left" Margin="277,85.09,0,0" VerticalAlignment="Top" Width="91" Height="26"/>
                    <TextBox x:Name="tbPatch" HorizontalAlignment="Left" Height="23" Margin="90,54.09,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222"/>
                    <TextBox x:Name="tbROM" HorizontalAlignment="Left" Height="23" Margin="90,11.09,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222"/>
                    <Button x:Name="btnSearchROM" Content="..." HorizontalAlignment="Left" Margin="317,11.09,0,0" VerticalAlignment="Top" Width="51" Height="26"/>
                    <Button x:Name="btnSearchPatch" Content="..." HorizontalAlignment="Left" Margin="317,54.09,0,0" VerticalAlignment="Top" Width="51" Height="26"/>
                    <Label Content="ROM File" HorizontalAlignment="Left" Height="23" Margin="10,11.09,0,0" VerticalAlignment="Top" Width="60"/>
                    <Label Content="CMTP File " HorizontalAlignment="Left" Margin="10,54.09,0,37.95" Width="65"/>
                </Grid>
            </TabItem>
            <TabItem Header="Create Patch">
                <Grid>

                </Grid>
            </TabItem>
            <TabItem Header="Check Patch Info">
                <Grid>

                </Grid>
            </TabItem>
            <TabItem Header="About CMTP">
                <Grid>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
